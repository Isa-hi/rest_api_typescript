{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src/",
        "lib": ["esnext"],
        "strict": false,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
}